      <p>Welcome Please Login Here If You Have An Account!</p>
      <%= link_to "Login", new_session_path, class:"nav-link", id:"loginbtn", style:"color:#fff;" %><br/>
    </div>
    <div class="col-md-9 register-right">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <h3 class="register-heading">New User</h3>
        <div class="row register-form">
          <div class="col-md-6">
            <div class="form-group">
              <%= form.text_field :fullname, class:"form-control", placeholder:"Full Name *" %>
            </div>
            <div class="form-group">
              <%= form.email_field :email, class:"form-control", placeholder:"Email *" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= form.text_field :telephone, class:"form-control", placeholder:"Telephone Number *" %>            
            </div>
            <div class="form-group">
              <%= form.password_field :password, class:"form-control", placeholder:"Password *" %>
            </div>    
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Password Confirmation *" %>
            </div>
            <%= form.submit class:"btnRegister" %>
    </div> 
