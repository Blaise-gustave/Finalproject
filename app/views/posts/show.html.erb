
<center>
<div class="card w-50">
<div class="card-header" style="background-color:#357376;">


<h1 style="color:#fff;">Post details</h1>
</div>
<div class="card-body">
<p>
  <strong>Company name:</strong>
  <%= @post.company_name %>
</p>

<p>
  <strong>Post:</strong>
  <%= @post.post %>
</p>
<p>
  <strong>Ranking:</strong>
  <%= @post.ranking %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>
<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info btn-sm" %>
</div>

</div>

</center>


<% if current_user.admin?%>
  <%= render 'comments/comment' %>
<% end %>
